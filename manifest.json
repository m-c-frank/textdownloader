{
  "manifest_version": 3,
  "name": "Div Highlighter",
  "version": "1.0",
  "description": "Highlight divs on mouseover and download text on click",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.svg",
      "48": "icon.svg",
      "128": "icon.svg"
    }
  }
}