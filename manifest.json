{
  "manifest_version": 3,
  "name": "Text Downloader",
  "version": "1.0",
  "description": "Download text from selected div",
  "permissions": [
    "activeTab",
    "downloads",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.svg"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
